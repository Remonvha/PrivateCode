{
  "kind": "template",
  "properties": {
    "displayName": "[parameters('logAnalytics').name]",
    "description": "",
    "dependsOn": [],
    "template": {
      "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
      "contentVersion": "1.0.0.0",
      "parameters": {
        "logAnalytics": {
          "type": "object",
          "metadata": {
            "description": "Properties of the Log Analytics workspace."
          }
        },
        "general": {
          "type": "object",
          "metadata": {
            "description": "Gets or sets a list of key value pairs [tags] that describe the resource."
          }
        }
      },
      "variables": {},
      "resources": [
        {
          "apiVersion": "2020-03-01-preview",
          "location": "[parameters('general').location]",
          "name": "[parameters('logAnalytics').name]",
          "properties": {
            "sku": {
              "name": "[parameters('logAnalytics').sku]"
            },
            "retentionInDays": "[parameters('logAnalytics').retentionInDays]",
            "features": {
              "searchVersion": 1
            }
          },
          "tags": "[parameters('general').tags]",
          "type": "Microsoft.OperationalInsights/workspaces",
          "resources": []
        },
        {
          "type": "Microsoft.OperationalInsights/workspaces/savedSearches",
          "apiVersion": "2020-08-01",
          "name": "[concat(parameters('logAnalytics').name, '/', parameters('logAnalytics').query[copyIndex()].name)]",
          "dependsOn": [
            "[concat('Microsoft.OperationalInsights/workspaces/', parameters('logAnalytics').name)]"
          ],
          "condition": "[greater(length(parameters('logAnalytics').query), 0)]",
          "copy": {
            "name": "law-query-copy",
            "mode": "Parallel",
            "count": "[length(parameters('logAnalytics').query)]"
          },
          "properties": {
            "Category": "[parameters('logAnalytics').query[copyIndex()].category]",
            "etag": "*",
            "DisplayName": "[parameters('logAnalytics').query[copyIndex()].displayName]",
            "Query": "[parameters('logAnalytics').query[copyIndex()].query]",
            "Version": 2
          }
        }
      ],
      "outputs": {}
    },
    "resourceGroup": "rg-monitoring",
    "parameters": {
      "logAnalytics": {
        "value": "[parameters('logAnalytics')]"
      },
      "general": {
        "value": "[parameters('general')]"
      }
    }
  }
}